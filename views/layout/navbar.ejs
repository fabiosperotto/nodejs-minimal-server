<nav>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/contato">Fale Conosco</a></li>
        <li>
            <% if(locals.user){ %> 
                <a href="#">Admin Painel</a> - <a href="/logout">Logout</a>
            <% } else{ %>
                <form name="form-acesso" method="post" action="/login">
                    <input type="text" name="login" id="form-login" size="10" placeholder="Usuario" required>
                    <input type="password" name="senha" id="form-senha" size="10" placeholder="Senha" required>
                    <input type="submit" value="Login">
                </form>
            <% } %>
            <% if(locals.erro1){ %>
                <p>Campos obrigatórios não foram informados.</p>
            <% } %>
            <% if(locals.erro2){ %>
                <p>E-mail ou Senha não foram encontrados.</p>
            <% } %>
            <% if(locals.fimsessao){ %>
                <p>Sua sessão expirou ou você fez o logout.</p>
            <% } %>
        </li>
    </ul>
</nav>